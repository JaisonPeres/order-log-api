    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/ui": "^3.2.4",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.24.0",
    "esbuild-copy-static-files": "^0.1.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.2",
