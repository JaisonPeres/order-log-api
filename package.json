    "db:migrate": "drizzle-kit migrate",
    "db:seed": "drizzle-kit seed",
    "test": "vitest run",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^10.0.1",
