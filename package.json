    "amqplib": "^0.10.8",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.44.3",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "postgres": "^3.4.7",
    "uuid": "^11.1.0",
    "zod": "^3.24.1"
  },
  "lint-staged": {
    "*.{ts,js}": [
